package projectEx;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class FindPathGui extends JFrame {
	
	JTextField startField = new JTextField(10);
	JTextField endField = new JTextField(10);
	ImageIcon [] images = {new ImageIcon("images/search.png"), new ImageIcon("images/star.png")};
	ImageIcon [] changeImages = new ImageIcon[images.length];
	
	
	FindPathGui() {
		setTitle("실시간 도로상황");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Container c = getContentPane();
		c.setLayout(new FlowLayout());
		
		JMenuItem starAdd1 = new JMenuItem("등록");
		JMenuItem starAdd2 = new JMenuItem("목록");
		
		int i = 0;
		for(ImageIcon image : images) {
			Image item = (Image)image.getImage();
			changeImages[i++] = new ImageIcon(item.getScaledInstance(20, 20, java.awt.Image.SCALE_SMOOTH));
		}
		
		JButton search = new JButton(changeImages[0]);
		JButton star = new JButton(changeImages[1]);
		
//		search.setBorderPainted(false);
//		star.setBorderPainted(false);
		
		
		MyListener starListener = new MyListener();
		star.addActionListener(starListener);
		
//		search.setFocusPainted(false);
//		star.setFocusPainted(false);
		
		
		c.add(startField);
		c.add(endField);
		c.add(search);
		c.add(star);
		
		
		
		
		setSize(500, 300);
		setVisible(true);
		
	}
	
	class MyListener implements ActionListener {
		public void actionPerformed(ActionEvent e) {
			
			JButton star = (JButton)e.getSource();
			
			star.add(new JMenuItem("등록"));
			star.add(new JMenuItem("목록"));
			
			
		}
	}
	
	
	
	
	
	

}
