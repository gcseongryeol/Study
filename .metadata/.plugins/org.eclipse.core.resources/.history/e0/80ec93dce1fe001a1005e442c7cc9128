package projectEx;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class FindPath extends JFrame {
	
	JTextField startField = new JTextField(10);
	JTextField endField = new JTextField(10);
	ImageIcon [] images = {new ImageIcon("images/search.png")};
	ImageIcon [] changeImages = new ImageIcon[images.length];
	
	
	FindPath() {
		setTitle("실시간 도로상황");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Container c = getContentPane();
		c.setLayout(new FlowLayout());
		
		int i = 0;
		for(ImageIcon image : images) {
			Image item = (Image)image.getImage();
			changeImages[i++] = new ImageIcon(item.getScaledInstance(20, 20, java.awt.Image.SCALE_SMOOTH));
		}
		
		JButton search = new JButton(changeImages[0]);
		
		c.add(startField);
		c.add(endField);
		c.add(search);
		
		setSize(500, 300);
		setVisible(true);
		
	}
	
	public static void main(String[] args) {
		new FindPath();
	}
	
	
	
	
	
	

}
